{
  "name": "Document Processing Platform",
  "description": "AI-powered document processing with multi-agent workflow",
  "version": "1.0.0",
  "backend": {
    "type": "external",
    "url": "http://localhost:8000",
    "healthCheck": "/health",
    "documentation": "/docs"
  },
  "api": {
    "baseUrl": "http://localhost:8000",
    "endpoints": {
      "health": "/health",
      "processDocument": "/process-document",
      "processText": "/process-text",
      "getStatus": "/status/{thread_id}",
      "getResults": "/results/{thread_id}",
      "submitHumanReview": "/human-review/{thread_id}/submit",
      "getReviewContext": "/human-review/{thread_id}/context",
      "websocket": "/workflow/{document_id}/stream"
    }
  },
  "features": {
    "fileUpload": true,
    "textProcessing": true,
    "realTimeUpdates": true,
    "humanReview": true,
    "multiAgent": true,
    "websockets": true
  },
  "supportedFileTypes": [
    "pdf",
    "docx", 
    "txt",
    "jpg",
    "jpeg",
    "png"
  ],
  "environment": {
    "development": {
      "apiUrl": "http://localhost:8000"
    },
    "production": {
      "apiUrl": "https://your-production-domain.com"
    }
  },
  "cors": {
    "enabled": true,
    "origins": [
      "http://localhost:3000",
      "https://*.lovable.dev",
      "https://*.lovableproject.com"
    ]
  }
}